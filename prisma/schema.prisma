// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  firstName String
  lastName  String
  courses Course[]
}

model Course {
  id         Int     @id
  name       String
  isCompleted Boolean
  description       String?

  userId Int
  user   User[]
  lesson Lesson[]
}

model Lesson {
  id         Int     @id
  name       String
  isCompleted Boolean

  courseId Int
  course   Course @relation(fields: [courseId], references: [id])
}
